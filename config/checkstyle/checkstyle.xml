<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <!-- Line length -->
  <module name="LineLength">
    <property name="max" value="120"/>
    <property name="ignorePattern" value="^package |^import |https?://"/>
  </module>

  <module name="TreeWalker">
    <!-- Imports -->
    <module name="AvoidStarImport"/>

    <!-- Braces & whitespace -->
    <module name="NeedBraces"/>
    <module name="LeftCurly"><property name="option" value="eol"/></module>
    <module name="RightCurly"/>
    <module name="WhitespaceAround"/>
    <module name="WhitespaceAfter"/>

    <!-- Naming -->
    <module name="PackageName"/>
    <module name="TypeName"/>
    <module name="MemberName"/>
    <module name="ConstantName"/>

    <!-- REQUIRE Javadoc on public types -->
    <module name="MissingJavadocType">
      <property name="scope" value="public"/>
    </module>

    <!-- REQUIRE Javadoc on public methods; skip trivial getters/setters and @Override -->
    <module name="MissingJavadocMethod">
      <property name="scope" value="public"/>
      <property name="minLineCount" value="1"/>
      <property name="allowedAnnotations" value="Override"/>   <!-- <â€” use this -->
      <property name="ignoreMethodNamesRegex" value="^(get|set|is)[A-Z].*"/>
    </module>

    <!-- Validate summary ends with a period -->
    <module name="SummaryJavadoc">
      <property name="period" value="."/>
    </module>

    <!-- Optional Javadoc content validation for public methods -->
    <module name="JavadocMethod">
      <property name="accessModifiers" value="public"/>
      <property name="allowMissingParamTags" value="true"/>
      <property name="allowMissingReturnTag" value="true"/>
      <property name="validateThrows" value="false"/>
    </module>
  </module>
</module>

