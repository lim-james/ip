<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" 
            maxWidth="-Infinity" 
            minHeight="-Infinity" 
            minWidth="-Infinity" 
            prefHeight="600.0" 
            prefWidth="400.0" 
            xmlns="http://javafx.com/javafx/20.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="MainWindow" 
            stylesheets="@/css/main.css">
  <children>
    <!-- Header with title -->
    <HBox alignment="CENTER_LEFT" 
          prefHeight="60.0" 
          prefWidth="400.0" 
          style="-fx-background-color: #17212b; -fx-border-color: #2b2f36; -fx-border-width: 0 0 1 0;"
          AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0" 
          AnchorPane.topAnchor="0.0">
      <children>
        <Label text="Dwight K. Schrute" 
               style="-fx-text-fill: white; -fx-font: bold 18px 'Segoe UI';"
               HBox.hgrow="ALWAYS">
          <HBox.margin>
            <Insets left="20.0" />
          </HBox.margin>
        </Label>
      </children>
    </HBox>

    <!-- Chat area -->
    <ScrollPane fx:id="scrollPane" 
                fitToWidth="true" 
                hbarPolicy="NEVER" 
                hvalue="1.0" 
                prefHeight="478.0" 
                prefWidth="400.0" 
                vvalue="1.0" 
                AnchorPane.bottomAnchor="62.0" 
                AnchorPane.leftAnchor="0.0" 
                AnchorPane.rightAnchor="0.0" 
                AnchorPane.topAnchor="60.0">
      <content>
        <VBox fx:id="dialogContainer" 
              prefHeight="478.0" 
              prefWidth="388.0" 
              spacing="8.0"
              style="-fx-background-color: #0f1419;">
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
        </VBox>
      </content>
    </ScrollPane>

    <!-- Input area -->
    <HBox alignment="CENTER_LEFT" 
          prefHeight="60.0" 
          prefWidth="400.0" 
          spacing="10.0"
          style="-fx-background-color: #17212b; -fx-border-color: #2b2f36; -fx-border-width: 1 0 0 0;"
          AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0">
      <children>
        <TextField fx:id="userInput" 
                   onAction="#handleUserInput" 
                   prefHeight="40.0" 
                   promptText="Type a message..."
                   HBox.hgrow="ALWAYS">
        </TextField>
        <Button fx:id="sendButton" 
                mnemonicParsing="false" 
                onAction="#handleUserInput" 
                prefHeight="40.0" 
                prefWidth="60.0" 
                text="Send" />
      </children>
      <padding>
        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
      </padding>
    </HBox>
  </children>
</AnchorPane>

